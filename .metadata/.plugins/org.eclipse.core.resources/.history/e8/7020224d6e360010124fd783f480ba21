#include "stm32f4xx.h"

#define GPIOAEN			(1<<0)
#define ADC1EN			(1<<8)


void pa1_adc_init()
{
	// Config ADC GPIO pin


	// enable clock access to GPIOA  pin port (PA1)
	RCC->AHB1ENR |= GPIOAEN;
	// set mode of PA1 to analog mode (mode register)
	GPIOA->MODER |= (1U<<2);
	GPIOA->MODER |= (1U<<3);

	// Config ADC Module
	// enable clock access to ADC Module
	RCC->APB2ENR |= ADC1EN;
	// Config ADC parameters
	// Conversion sequence start
	// Conversion sequence length
	// Enable the ADC module

}
